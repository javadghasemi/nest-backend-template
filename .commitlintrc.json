{
  "extends": ["@commitlint/config-angular"],
  "rules": {
    "subject-case": [
      2,
      "always",
      ["sentence-case", "start-case", "pascal-case", "upper-case", "lower-case"]
    ],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "feature",
        "chore",
        "docs",
        "fix",
        "refactor",
        "test",
        "sample"
      ]
    ],
    "scope-enum": [
      1,
      "always",
      [
        "AuthenticationModule",
        "ProductsModule",
        "UsersModule"
      ]
    ]
  }
}
